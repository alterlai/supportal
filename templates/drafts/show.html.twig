{% extends 'profile/settings.html.twig' %}

{% block content %}

    <div class="card">
        <div class="card_head">
            <h4>Document: {{ draft.document.documentName }}</h4>
        </div>
        <div class="card_body no-padding">
            <p class="pl-25">
                <b>Status</b>
                <br>
                Deze tekening wordt gecontroleerd. U wordt op de hoogte gesteld wanneer deze verwerking is voltooid.
            </p>
            <table class="table table-borderless">
                <tr>
                    <td>Geupload</td>
                    <td>{{ draft.uploadedAt.format("d-m-Y H:m") }}</td>
                </tr>
                <tr>
                    <td>Discipline</td>
                    <td>{{ draft.document.discipline }}</td>
                </tr>
                <tr>
                    <td>Document type</td>
                    <td>{{ draft.document.documentType }}</td>
                </tr>
                <tr>
                    <td>Gebouw</td>
                    <td>{{ draft.document.building }}</td>
                </tr>
                <tr>
                    <td>Verdieping</td>
                    <td>{{ draft.document.floor }}</td>
                </tr>
                <tr>
                    <td>Gebouwdeel</td>
                    <td>{{ draft.document.area }}</td>
                </tr>
            </table>
            <hr>
            <button class="btn btn-danger float-right mr-2"><svg class="bi bi-trash" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                </svg>Concept verwijderen</button>
        </div>
    </div>

{% endblock %}