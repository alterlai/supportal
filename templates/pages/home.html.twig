{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}
{% block body %}
    {% include 'partials/navbar.html.twig' %}

    <div class="">
        <div class="row">
            <div class="topBarContainer d-flex">
                <div class="searchTitle">
                    <h5>Zoektermen <br> toevoegen / verwijderen</h5>
                </div>
                <div class="searchContainer">
                    <div class="searchBarContainer">
                        <input id="searchContent" type="text" name="input">
                    </div>
                    <div class="tagContainer">
                        {# Area for tags #}
                    </div>
                </div>
                <button id="addTagButton">Toevoegen</button>
            </div>
        </div>


        <div class="documentContainer">
            <div class="tileContainer d-flex">
                {% for document in documents %}
                    <div class="documentCard">
                        <div class="pdfPreview">
                            <svg class="bi bi-image-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M.002 3a2 2 0 012-2h12a2 2 0 012 2v10a2 2 0 01-2 2h-12a2 2 0 01-2-2V3zm1 9l2.646-2.354a.5.5 0 01.63-.062l2.66 1.773 3.71-3.71a.5.5 0 01.577-.094L15.002 9.5V13a1 1 0 01-1 1h-12a1 1 0 01-1-1v-1zm5-6.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z" clip-rule="evenodd"/>
                            </svg>
                        </div>
                        <div class="documentDetails">
                            <ul>
                                <li>{{ document.documentName }}</li>
                                <li>{{ document.location }}</li>
                                <li>{{ document.building ? document.building : ""}}</li>
                                <li>{{ document.area ? document.area : ""}}</li>
                                <li>Verdieping: {{ document.floor}}</li>
                                <li>{{ document.discipline }}</li>
                                <li>{{ document.updatedAt.format('d/m/Y') }}</li>
                                <li>[Documentsoort]</li>
                            </ul>
                        </div>

                    </div>
                {%  endfor %}
            </div>
            <div class="detailsContainer">
                {# Document details #}
            </div>
        </div>

    </div>



{% endblock %}