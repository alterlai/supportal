{% extends 'base.html.twig' %}

{% block body %}
{% include 'partials/navbar.html.twig' %}

    <div class="container">
        <ol class="breadcrumb shadow-sm bg-white">
            <li class="breadcrumb-item">Home /</li>
        </ol>

        <div class="row">
            <div class="col-sm-8">
                {% for location in locations %}
                    <div class="card d-flex flex-column location">
                        <div class="card_head">
                            <h4>{{ location.name }}</h4>
                        </div>
                        <div class="card_body d-flex flex-column">
                            {% for building in location.buildings %}
                                <a href="{{ path('documents', {buildingId: building.id}) }}">
                                    <div class="building">

                                        {{ building.name }}

                                    </div>
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="issues-container col-sm-4">
                <div class="card">
                    <div class="card_head">
                        <h4 class="font-weight-bold">Openstaande tekeningen</h4>
                    </div>
                    <div class="card_body">
                        {% for issue in issues %}
                            <a href="{{ path('issue', {id: issue.id}) }}">
                                {{ issue.document }}
                                <br>
                                {{ issue.issuedAt.format("d-m-Y H:m") }}
                                <br>
                                {{ issue.issueDeadline.format("d-m-Y H:m") }}
                            </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>



    </div>
{% endblock %}