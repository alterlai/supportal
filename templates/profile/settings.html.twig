{% extends 'base.html.twig' %}

{% block body %}
    {% include 'partials/navbar.html.twig' %}

    <div class="container pt-3">
        <div class="row">
            <div class="col-md-3">
                <div class="card">
                    <ul class="card-nav">
                        <a {% if app.request.get('_route') == 'profile' %} class="active"{% endif %} href="{{ path('profile') }}"><li>Profile</li></a>
                        <a {% if app.request.get('_route') == 'issue.index' %} class="active"{% endif %} href="{{ path('issue.index') }}"><li>Openstaande aanvragen</li></a>
                        <a {% if app.request.get('_route') == 'draft.index' %} class="active"{% endif %} href="{{ path('draft.index') }}"><li>Geuploade documenten</li></a>
                    </ul>
                </div>
            </div>

            <div class="col-md-9">
                {% block content %}
                {% endblock %}
            </div>
        </div>

    </div>

{% endblock %}