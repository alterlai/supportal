<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="icon" href="{{ asset('web/img/favicon.ico') }}">
        <title>{% block title %}{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('web/css/bootstrap.min.css') }}" type="text/css" media="all">
        <link rel="stylesheet" href="{{ asset('web/css/main.css') }}" type="text/css" media="all">
        <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;600;700;900&display=swap" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css"/>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block body %}
        {% endblock %}
        <script src="{{ asset('web/js/jquery-3.4.1.min.js') }}"></script>
        <script src="{{ asset('web/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('web/js/main.js') }}"></script>
        <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.20/fh-3.1.6/r-2.2.3/datatables.min.js"></script>
        {% block javascripts %}{% endblock %}
        <style>
            {% if app.user %}
                .card {border-top: 3px solid {{ app.user.organisation.color}};}
                .card .card-nav a.active { border-left: 3px solid {{ app.user.organisation.color}}; }
                .card .card-nav a:hover {
                    border-left: 3px solid {{ app.user.organisation.color}};
                    transition: border-left .05s;
                }
            {% endif %}
        </style>
    </body>
</html>
