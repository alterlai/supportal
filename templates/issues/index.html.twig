{% extends 'profile/settings.html.twig' %}

{% block content %}

<div class="card">
    <div class="card_head">
        <h4>Openstaande aanvragen</h4>
    </div>
    <div class="card_body no-padding">
        {% if issues == null %}
            <h2 class="text-center">Geen openstaande concepten</h2>
        {% else %}
        <div id="listingContainer">
            <table class="table dataTable cell-border" id="uploaded_documents">
                <thead>
                <tr>
                    <th>STATUS</th>
                    <th>NAAM</th>
                    <th>AANVRAAGDATUM</th>
                    <th>DEADLINE</th>
                </tr>
                </thead>
                <tbody>
                {% for issue in issues %}
                    <tr data-href="{{ path('issue.show', {id: issue.id}) }}" class="clickable-row">
                        <td>{{ issue.closed ?
                                '<svg class="green bi bi-check-circle" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                  <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                  <path fill-rule="evenodd" d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.236.236 0 0 1 .02-.022z"/>
                                 </svg> Gesloten'
                                :
                                '<svg class="red bi bi-x-circle" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                  <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                  <path fill-rule="evenodd" d="M11.854 4.146a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708-.708l7-7a.5.5 0 0 1 .708 0z"/>
                                  <path fill-rule="evenodd" d="M4.146 4.146a.5.5 0 0 0 0 .708l7 7a.5.5 0 0 0 .708-.708l-7-7a.5.5 0 0 0-.708 0z"/>
                                </svg> Open'
                            }}</td>
                        <td>{{ issue.document.documentName }}</td>
                        <td>{{ issue.issuedAt.format("d-m-Y H:m") }}</td>
                        <td>{{ issue.issueDeadline.format("d-m-Y H:m") }}</td>
                    </tr>
                {% endfor %}
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}